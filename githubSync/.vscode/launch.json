{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GitHub Sync Service (Debug)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "stopOnEntry": false,
            "autoReload": {
                "enable": true
            }
        }
    ]
}